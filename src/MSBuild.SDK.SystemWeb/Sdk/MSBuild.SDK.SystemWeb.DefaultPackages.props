<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Use new common property ExcludeDefaultSDKPackages instead of ExcludeASPNetCompilers from V4.0.83 onwards -->
  <PropertyGroup>
    <ExcludeDefaultRazorPackages Condition="'$(ExcludeASPNetCompilers)'==''">false</ExcludeDefaultRazorPackages>
    <ExcludeDefaultSDKPackages Condition="'$(ExcludeDefaultSDKPackages)'==''">$(ExcludeASPNetCompilers)</ExcludeDefaultSDKPackages>
  </PropertyGroup>
  <Import Project="MSBuild.SDK.SystemWeb.Common.DefaultPackages.props"/>
</Project>